@model Linear_v1.Models.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Cart"; Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="page-header">
    <h2>🛒 Your Cart</h2>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert-success">@TempData["Success"]</div>
}

@if (!Model.CartItems.Any())
{
    <div class="card text-center" style="padding:40px;">
        <p style="color:var(--text-muted);font-size:16px;">Cart is empty.</p>
        <a asp-action="Products" class="btn-primary"
           style="display:inline-block;margin-top:16px;width:auto;
                      padding:10px 24px;text-decoration:none;">
            Browse Products
        </a>
    </div>
}
else
{
    <div class="cart-layout">

        <!-- Cart Items -->
        <div class="card">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Duration</th>
                        <th>Price</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td style="color:var(--beige-light);font-weight:500;">
                                @item.ProductTitle
                            </td>
                            <td>@item.DurationMonths months</td>
                            <td style="color:var(--accent-red-glow);">
                                ৳@item.FinalPrice.ToString("N0")
                            </td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn-sm btn-danger">✕</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (Model.CartItems.Count >= 2)
            {
                <div class="bundle-info" style="margin-top:16px;">
                    @if (Model.CartItems.Count >= 3)
                    {
                        <span>🎉 3+ products — 15% bundle discount applied!</span>
                    }
                    else
                    {
                        <span>🎉 2 products — 10% bundle discount applied!</span>
                    }
                </div>
            }
        </div>

        <!-- Order Summary -->
        <div class="card summary-card">
            <h3 style="margin-bottom:20px;color:var(--beige-light);">
                Order Summary
            </h3>

            <div class="summary-row">
                <span>Subtotal</span>
                <span>৳@Model.SubTotal.ToString("N0")</span>
            </div>

            @if (Model.BundleDiscount > 0)
            {
                <div class="summary-row discount">
                    <span>Bundle Discount</span>
                    <span>- ৳@Model.BundleDiscount.ToString("N0")</span>
                </div>
            }

            @if (Model.VoucherDiscount > 0)
            {
                <div class="summary-row discount">
                    <span>Voucher (@Model.VoucherCode)</span>
                    <span>- ৳@Model.VoucherDiscount.ToString("N0")</span>
                </div>
            }

            <!-- Voucher Input -->
            <form asp-action="ApplyVoucher" method="post" style="margin:16px 0;">
                @Html.AntiForgeryToken()
                <div style="display:flex;gap:8px;">
                    <input type="text" name="voucherCode"
                           value="@Model.VoucherCode"
                           placeholder="Voucher code"
                           class="form-input"
                           style="flex:1;text-transform:uppercase;" />
                    <button type="submit" class="btn-sm btn-success"
                            style="padding:8px 14px;white-space:nowrap;">
                        Apply
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(Model.VoucherMessage))
                {
                    <p style="font-size:12px;margin-top:6px;
                            color:@(Model.VoucherValid ? "#4ade80" : "#f87171");">
                        @Model.VoucherMessage
                    </p>
                }
            </form>

            <div class="summary-divider"></div>

            <div class="summary-row total">
                <span>Total</span>
                <span>৳@Model.Total.ToString("N0")</span>
            </div>

            <form asp-action="Checkout" method="post" style="margin-top:20px;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="voucherCode" value="@Model.VoucherCode" />
                <button type="submit" class="btn-primary">
                    ✅ Confirm Order
                </button>
            </form>
        </div>
    </div>
}

<style>
    .cart-layout {
        display: grid;
        grid-template-columns: 1fr 340px;
        gap: 24px;
        align-items: start;
    }

    .summary-card {
        position: sticky;
        top: 20px;
    }

    @@media (max-width: 768px) {
        .cart-layout {
            grid-template-columns: 1fr;
        }
    }
</style>