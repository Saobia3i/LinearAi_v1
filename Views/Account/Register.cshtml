@model Linear_v1.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register"; Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="brand">
        <img src="~/images/bg1.png" alt="Linear AI" class="logo-sm" />
        <h2>Linear <span class="accent">AI</span></h2>
    </div>
    <h3>Create Account</h3>

    <form asp-action="Register" method="post">
        <div asp-validation-summary="All" class="alert-error"></div>

        <div class="form-group">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" class="form-input" placeholder="Your Name" />
            <span asp-validation-for="FullName" class="field-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-input" placeholder="email@example.com" />
            <span asp-validation-for="Email" class="field-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-input" placeholder="At least 6 characters" />
            <span asp-validation-for="Password" class="field-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-input" placeholder="Re-enter password" />
            <span asp-validation-for="ConfirmPassword" class="field-error"></span>
        </div>

        <button type="submit" class="btn-primary">Register</button>
    </form>

    <p class="auth-link">Already have an account? <a asp-action="Login">Login here</a></p>
</div>