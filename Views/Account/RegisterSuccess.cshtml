@{
    ViewData["Title"] = "Verify Email"; Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card text-center">
    <div class="success-icon">✉️</div>
    <h3>Email Verification Sent</h3>
    <p>We sent a confirmation link to <strong>@ViewBag.Email</strong>.</p>
    <p>Check your email and click the link to verify your account.</p>
    <a asp-action="Login" class="btn-primary" style="display:inline-block;margin-top:16px;">Go to Login</a>
</div>