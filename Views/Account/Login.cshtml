@model Linear_v1.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login"; Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-card">
    <div class="brand">
        <h2>Linear <span class="accent">AI</span></h2>
    </div>
    <h3>Login</h3>

    @if (TempData["Info"] != null)
    {
        <div class="alert-info">@TempData["Info"]</div>
    }

    <form asp-action="Login" method="post">
        <div asp-validation-summary="All" class="alert-error"></div>
        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-input" placeholder="email@example.com" />
            <span asp-validation-for="Email" class="field-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-input" placeholder="Password" />
            <span asp-validation-for="Password" class="field-error"></span>
        </div>
        <div class="form-group-inline">
            <label><input asp-for="RememberMe" type="checkbox" /> Remember Me</label>
        </div>

        <button type="submit" class="btn-primary">Login</button>
    </form>

    <p class="auth-link">New user? <a asp-action="Register">Register here</a></p>
</div>