@model List<Linear_v1.Models.ViewModels.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
    var cartTotal = (decimal)ViewBag.CartTotal;
    var discountAmount = (decimal)ViewBag.DiscountAmount;
    var finalAmount = cartTotal - discountAmount;
}

<div class="container mt-4">
    <h2>Shopping Cart</h2>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="row mb-3 align-items-center">
                                <div class="col-md-6">
                                    <h5>@item.ProductTitle</h5>
                                    <p class="text-muted">₹@item.BasePrice.ToString("F2") - @item.DurationMonths months</p>
                                </div>
                                <div class="col-md-3">
                                    <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <div class="input-group">
                                            <input type="number" name="quantity" value="1" readonly
                                                   min="0" class="form-control text-center" style="width: 80px;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-3 text-end">
                                    <strong>₹@item.FinalPrice.ToString("F2")</strong>
                                </div>
                            </div>
                            <hr>
                        }
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>₹@cartTotal.ToString("F2")</span>
                        </div>
                        
                        @if (discountAmount > 0)
                        {
                            <div class="d-flex justify-content-between mb-2 text-success">
                                <span>Discount (@ViewBag.AppliedVoucher):</span>
                                <span>-₹@discountAmount.ToString("F2")</span>
                            </div>
                            <div class="d-flex mb-2">
                                <form asp-action="RemoveVoucher" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove Voucher</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <!-- Voucher Application -->
                            <div class="mb-3">
                                <label class="form-label">Voucher Code:</label>
                                <form asp-action="ApplyVoucher" method="post">
                                    <div class="input-group">
                                        <input type="text" name="voucherCode" class="form-control" 
                                               placeholder="Enter voucher code" required>
                                        <button type="submit" class="btn btn-outline-primary">Apply</button>
                                    </div>
                                </form>
                            </div>
                        }
                        
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong>₹@finalAmount.ToString("F2")</strong>
                        </div>
                        
                        <form asp-action="Checkout" method="post">
                            <button type="submit" class="btn btn-primary w-100">Proceed to Checkout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <h4>Your cart is empty</h4>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
        </div>
    }
</div>

