<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Linear AI</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/panel.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body class="panel-body">
    <nav class="sidebar">
        <div class="sidebar-brand">Linear <span class="accent">AI</span></div>
        <ul class="nav-links">
            <li>
                <a asp-controller="User" asp-action="Index"
                   class="@(ViewData["Title"]?.ToString() == "My Account" ? "active" : "")">
                    👤 Account
                </a>
            </li>

            <li>
                <a asp-controller="User" asp-action="Products"
                   class="@(ViewData["Title"]?.ToString() == "Products" ? "active" : "")">
                    🛒 Products
                </a>
            </li>

            <!-- ✅ NEW -->
            <li>
                <a asp-controller="User" asp-action="Orders"
                   class="@(ViewData["Title"]?.ToString() == "My Orders" ? "active" : "")">
                    📦 My Orders
                </a>
            </li>
        </ul>
    </nav>
    <main class="main-content">
        @RenderBody()
    </main>
</body>
</html>